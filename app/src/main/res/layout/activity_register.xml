<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Project_Just4Gamers"
    android:background="@color/yellowbrightgrey"
    tools:context=".userInterface.activities.RegisterActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:paddingRight="60dp">

            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="40dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/message"
                        android:layout_gravity="center"
                        android:contentDescription="@string/content_description" />

                    <EditText
                        android:id="@+id/et_register_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/et_register_emailT"
                        android:textColorHint="@color/edittextdefaultcolor"
                        android:layout_marginLeft="15dp"
                        android:background="#00000000"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="16dp"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorThemeOrange"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/usrusr"
                        android:layout_gravity="center"
                        android:contentDescription="@string/content_description" />
                    <EditText
                        android:id="@+id/et_register_nume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/et_register_numeT"
                        android:textColorHint="@color/edittextdefaultcolor"
                        android:layout_marginLeft="15dp"
                        android:background="#00000000"
                        android:fontFamily="@font/lato_regular"
                        android:textSize="16dp"
                        android:inputType="text"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorThemeOrange"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/usrusr"
                        android:layout_gravity="center"
                        android:contentDescription="@string/content_description" />
                    <EditText
                        android:id="@+id/et_register_prenume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/et_register_prenumeT"
                        android:textColorHint="@color/edittextdefaultcolor"
                        android:layout_marginLeft="15dp"
                        android:background="#00000000"
                        android:textSize="16dp"
                        android:inputType="text"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorThemeOrange"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/pswrd"
                        android:layout_gravity="center"/>

                    <EditText
                        android:id="@+id/et_register_password1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/et_register_password1T"
                        android:textColorHint="@color/edittextdefaultcolor"
                        android:layout_marginLeft="15dp"
                        android:background="#00000000"
                        android:inputType="textPassword"
                        android:textSize="16dp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/black"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorThemeOrange"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/pswrd"
                        android:layout_gravity="center"
                        android:contentDescription="@string/content_description" />

                    <EditText
                        android:id="@+id/et_register_password2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/et_register_password2T"
                        android:textColorHint="@color/edittextdefaultcolor"
                        android:layout_marginLeft="15dp"
                        android:background="#00000000"
                        android:textSize="16dp"
                        android:inputType="textPassword"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorThemeOrange"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:orientation="vertical"
            android:background="@drawable/linearlayout_brackground"
            android:gravity="bottom"
            android:layout_marginBottom="20dp">

            <CheckBox
                android:id="@+id/cb_register_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cb_register_termsT"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:fontFamily="@font/lato_regular"
                app:layout_constraintStart_toStartOf="parent"
                android:checked="false"/>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:text="@string/btn_registerT"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="bottom"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                />

            <TextView
                android:id="@+id/tv_register_loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/black"
                android:paddingBottom="10dp"
                android:textSize="16dp"
                android:text="@string/tv_register_loginBtnT"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="400dp">

            <FrameLayout
                android:id="@+id/fl_login_header_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/color_logo_with_background"
                    android:contentDescription="@string/header_image" />
            </FrameLayout>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

